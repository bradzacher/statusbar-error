{
  "name": "statusbarerror",
  "version": "0.0.1",
  "publisher": "nexes",
  "engines": {
    "vscode": "^1.27.0"
  },
  "author": {
    "name": "Joe Berria",
    "email": "joeberria@gmail.com"
  },
  "description": "Show error and warning messages in the status bar for th current line",
  "displayName": "Statusbar error",
  "categories": [
    "Other"
  ],
  "main": "./out/extension",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "title": "Statusbar Error configuration",
      "properties": {
        "statusbarerror.color.warning": {
          "type": "string",
          "default": "#f4b81f",
          "description": "Font color for linter warnings"
        },
        "statusbarerror.color.error": {
          "type": "string",
          "default": "#f41f1f",
          "description": "Font color for linter errors"
        },
        "statusbarerror.color.info": {
          "type": "string",
          "default": "#41e086",
          "description": "Font color for linter information"
        }
      }
    },
    "commands": [
      {
        "command": "sb.toggle",
        "title": "Toggle statusbar errors",
        "category": "Statusbar error"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "compile": "tsc -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "3.1.3",
    "vscode": "1.1.21",
    "@types/node": "9.6.35"
  },
  "license": "MIT"
}
